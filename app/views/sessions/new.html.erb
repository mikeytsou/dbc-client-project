<div class="container col-md-4 col-md-offset-4">
  <br>
    <h1 class="form-signin-heading text-center">Sign In</h1>
  <br>

  <% if @errors %>
    <% @errors.each do |msg| %>
      <p class="text-center bg-danger"><%= msg %></p>
    <% end %>
  <% end %>

  <%= form_tag sessions_path, class: 'form-signin' do %>
    <p>
      <%= label_tag :username %><br>
      <%= text_field_tag :username, params[:username], class: 'form-control', placeholder: 'Username', required: true, autofocus: true %>
    </p>

    <p>
      <%= label_tag :password %><br>
      <%= password_field_tag :password, params[:password], class: 'form-control', placeholder: 'Password', required: true %>
    </p>

    <p>
      <%= submit_tag "Sign In", class: 'btn btn-lg btn-primary btn-block' %>
    </p>
  <% end %>
</div>
