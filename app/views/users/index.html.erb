<h1>All Trusted Users</h1>

<ul>
  <% @trusted_users.each do |user| %>
    <li><%= link_to user.username, user %></li>
  <% end %>
</ul>


<h1>All Normal Users</h1>

<ul>
  <% @non_trusted_users.each do |user| %>
    <li><%= link_to user.username, user %></li>

    <% if logged_in? && current_user.trusted %>
      <%= link_to "Authorize", user_path(user), method: :patch %>
    <% end %>

  <% end %>
</ul>
