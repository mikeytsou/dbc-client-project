<div class="user-index">
  <h1>All Trusted Users</h1>

  <ul class="unordered-list-style">
    <% @trusted_users.each do |user| %>
      <li class="user-index-li"><%= link_to user.username, user %></li>
    <% end %>
  </ul>
</div>

<div class="user-index">
  <h1>All Normal Users</h1>

  <ul class="unordered-list-style">
    <% @non_trusted_users.each do |user| %>
      <li class="user-index-li"><%= link_to user.username, user %> -
        <% if logged_in? && current_user.trusted %>
          <%= link_to "Authorize", user_path(user), method: :patch, class: "btn btn-sm btn-primary" %>
        <% end %>
      </li>
    <% end %>
  </ul>
</div>
