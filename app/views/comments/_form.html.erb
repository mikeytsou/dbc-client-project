<div class="container col-md-6 text-center">
  <%= form_for [@review, @comment] do |f| %>
    <%= f.label :content, "Comment" %><br>
    <%= f.text_area :content, class: 'form-control-lg', placeholder: 'Add comment...', required: true, autofocus: true %><br>

    <%= f.submit "Submit", class: 'btn btn-md btn-primary' %>
  <% end %>

  <% if flash[:errors] %>
    <% flash[:errors].each do |msg| %>
      <p><%= msg %></p>
    <% end %>
  <% end %>
</div>
